# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Source aliases
for file in "${ZDOTDIR:-$HOME}/.zprezto/aliases/"* ; do
  source "$file"
done

#Set unlimited history
export HISTFILESIZE=
export HISTTIMEFORMAT="[%F %T] "

#Plugins
plugins=(pacman tmux haskell fasd colored-man sudo git)

# archey3 -- disable while python gives errors (2018-08-09)
fortune
echo

if [ -z $(env | grep TMUX) ]; then
    tmux
fi
