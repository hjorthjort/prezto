K_REPO="$HOME/polkadot-verification/deps/wasm-semantics/deps/k"
KLAB_REPO="$HOME/klab"

export KLAB_K_PATH="$K_REPO/k-distribution/bin"
export KLAB_EVMS_PATH="$KLAB_REPO/evm-semantics"
export TMPDIR="/tmp"

export PATH="$KLAB_K_PATH:$PATH"
export PATH="$KLAB_REPO/bin:$PATH"

eval `opam config env`

func prove() {
  command="./kwasm klab-prove $1 --def-module KWASM-LEMMAS --format-failures"
  echo $command
  eval $command
}

func view() {
  command="./kwasm klab-view $1"
  echo $command
  eval $command
}
